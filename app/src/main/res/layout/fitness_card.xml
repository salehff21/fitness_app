<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp"

    android:elevation="4dp"
    android:gravity="center">

    <!-- الصف الأول -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- الوزن الصافي -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:paddingTop="15dp"

            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_weighing_machine"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الوزن الصافي"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/cairo_medium"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvwight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="58 KG"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#8A68C2"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- الطول -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bg_card"
            android:paddingTop="15dp"

            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic__height"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الطـول"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/cairo_medium"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvhight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="170 Cm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#8A68C2"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- الصف الثاني -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- العمر -->

        <!-- العرض -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:orientation="vertical"

            android:paddingTop="15dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_gravity="center"
                android:src="@drawable/age_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/cairo_medium"
                android:text="العمر"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="25 سنة"
                android:textColor="#8A68C2"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:layout_margin="8dp"
            android:paddingTop="15dp"

            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_fitneses"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ساعات التمارين "
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/cairo_medium"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvExerciseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05 h : 09 m"
                android:textColor="#8A68C2"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/cairo_bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
