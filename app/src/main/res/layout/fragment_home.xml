<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coutiner"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- الشريط العلوي (Bar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6D5BA6"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- أيقونة الرجوع (سهم) -->
        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_toback"
            android:layout_marginEnd="8dp" />

        <!-- عنوان الشريط -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="اللياقة البدنية"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/cairo_medium"
            android:textStyle="bold" />

        <!-- أيقونة الجهاز الرياضي -->
        <ImageView
            android:id="@+id/ivTreadmill"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_walk" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp">

        <include layout="@layout/fitness_card" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="390dp"

        android:background="@drawable/bg_card"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/foots_steps" />

        <TextView
            android:id="@+id/step_count"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/cairo_medium"
            android:text="0 خطوات"
            android:textColor="#8A68C2"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عدد الخطوات"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/cairo_medium"

            android:textAlignment="center"
            android:layout_weight="1"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="500dp"
        android:weightSum="2">

        <!-- زر: كمية الماء المستهلك -->
        <Button
            android:id="@+id/btnWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💧 كمية الماء المستهلك"
            android:textSize="16sp"
            android:fontFamily="@font/cairo_medium"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="12dp"
            android:backgroundTint="#6D5BA6"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="8dp" />

        <!-- زر: إضافة وجبة -->
        <Button
            android:id="@+id/btnAddFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍽️ إضافة وجبة"
            android:textSize="16sp"
            android:fontFamily="@font/cairo_medium"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="12dp"
            android:backgroundTint="#6D5BA6"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_food"
            android:drawablePadding="8dp" />


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        android:fontFamily="@font/cairo_medium"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@drawable/item_selector"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu"
        android:layout_gravity="bottom" />
</FrameLayout>