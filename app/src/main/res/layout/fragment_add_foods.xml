<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FAFAFA">

<!-- ✅ شريط علوي جميل -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#6D5BA6"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_toback"

        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="إضافة الوجبات"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/cairo_medium"
        android:gravity="center" />

    <ImageView
        android:id="@+id/ivTreadmill"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_walk" />

</LinearLayout>

<!-- ✅ نموذج إدخال ومحتوى -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:layout_marginTop="70dp"
    android:layout_marginBottom="70dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- صورة توضيحية -->

        <!-- الحقول -->

        <ImageView
            android:id="@+id/mealHeaderImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/ic_food"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/titleAddfood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="إضافة الوجبات اليومية"
            android:textSize="20sp"
            android:textColor="@color/SkyBlue"
            android:textStyle="bold"
            android:fontFamily="@font/cairo_medium"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/mealHeaderImage"  />

        <EditText
            android:id="@+id/foodNameInput"
            style="@style/StyledEdit"
            android:hint="اسم الطعام"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleAddfood" />

        <EditText
            android:id="@+id/etCalories"
            style="@style/StyledEdit"
            android:hint="عدد السعرات (كالوري)"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foodNameInput" />

        <EditText
            android:id="@+id/etProtein"
            style="@style/StyledEdit"
            android:hint="كمية البروتين (غرام)"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCalories" />

        <EditText
            android:id="@+id/etFat"
            style="@style/StyledEdit"
            android:hint="كمية الدهون (غرام)"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etProtein" />

        <EditText
            android:id="@+id/etCarbs"
            style="@style/StyledEdit"
            android:hint="كمية الكربوهيدرات (غرام)"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etFat" />

        <!-- زر الإضافة -->
        <Button
            android:id="@+id/addMealButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6D5BA6"
            android:fontFamily="@font/cairo_medium"
            android:text="➕ إضافة الوجبة"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCarbs" />

        <!-- قائمة الوجبات -->
        <TextView
            android:id="@+id/dailyLogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/cairo_medium"
            android:text="الوجبات المدخلة اليوم"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addMealButton" />

        <ListView
            android:id="@+id/dailyLogList"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/white"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"

            android:elevation="2dp"
            android:fontFamily="@font/cairo_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dailyLogTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

<!-- ✅ شريط التنقل السفلي -->
<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="bottom"
    android:background="@drawable/bottom_background"
    android:elevation="4dp"
    android:layout_marginHorizontal="5dp"
    app:itemIconSize="30dp"
    app:itemIconTint="@drawable/item_selector"
    app:itemRippleColor="@drawable/item_selector"
    app:labelVisibilityMode="unlabeled"
    app:menu="@menu/bottom_menu" />
</FrameLayout>
