<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:backgroundTint="#E5E4FA">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- ✅ صورة التمرين -->
        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_walk"
        android:contentDescription="Exercise Image"
        android:layout_marginBottom="16dp" />

        <!-- ✅ عنوان التمرين -->
        <TextView
            android:id="@+id/exerciseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم التمرين"
            android:textSize="22sp"
            android:textColor="#000000"
            android:fontFamily="@font/cairo_bold"
            android:layout_marginBottom="12dp" />

        <!-- ✅ العداد التنازلي -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="48sp"
            android:textColor="#6D5BA6"
            android:fontFamily="@font/cairo_bold"
            android:layout_marginBottom="16dp" />

        <!-- ✅ حقل كتابة الملاحظة -->
        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="ملاحظة حول التمرين"
            android:gravity="top|start"
            android:backgroundTint="#DDDDDD"
            android:background="@drawable/bg_card"
            android:padding="10dp"
            android:textColor="#333"
            android:fontFamily="@font/cairo_medium"
            android:layout_marginBottom="16dp" />

        <!-- ✅ زر ابدأ -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ابدأ"
            android:backgroundTint="#6D5BA6"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/cairo_bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- ✅ زر إنهاء -->
        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إنهاء"
            android:backgroundTint="#FF4B4B"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/cairo_bold"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
