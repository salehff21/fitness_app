<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- الهيدر -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#7B6CC3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_toback256"
            android:contentDescription="رجوع" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAlignment="center"
            android:text="التمارين"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="@font/cairo_medium" />
    </LinearLayout>

    <!-- زر التدريب اليومي -->
    <TextView
        android:id="@+id/btnDailyTraining"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="التدريب اليومي"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="@drawable/input_background"
        android:backgroundTint="@color/profilecolor"
        android:textSize="24sp"
        android:fontFamily="@font/cairo_medium"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- قائمة التمارين -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerExercises"
        android:layout_width="0dp"
        android:layout_height="620dp"
        android:layout_margin="16dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDailyTraining" />

    <!-- شريط التنقل السفلي -->

</androidx.constraintlayout.widget.ConstraintLayout>
